# weekdays_in_month.py
from datetime import datetime, timedelta

# Initialize the date for June 1st, 2024
start_date = datetime(2024, 6, 1)
# Calculate the number of days in June 2024
end_date = datetime(2024, 7, 1)

# List to hold the dates
weekdays_in_month = []

# Generate the dates
while start_date < end_date:
    # Check if it's a weekday (Monday to Friday are 0-4)
    if start_date.weekday() < 5:
        # Append the date in the specified format
        weekdays_in_month.append(start_date.strftime('%m-%d-%Y'))
    # Move to the next day
    start_date += timedelta(days=1)

weekdays_in_month

# Print the list of weekdays in June 2024
for date in weekdays_in_month:
    print(date)

# Use the first 5 values in the list to iterate through the weekdays in the month and perform the desired actions.
weekdays_in_month = weekdays_in_month[:5]
# Convert these strings to integers
for i in range(len(weekdays_in_month)):
    weekdays_in_month[i] = int(weekdays_in_month[i].split("-")[1])
# Call this list first_five_weekdays_in_month
first_five_weekdays_in_month = weekdays_in_month


# Use this list to iterate through the weekdays in the month and perform the desired actions.

